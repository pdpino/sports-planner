<div id="body-container">
  <div class="jumbotron-center">
    <div class="box-container form-container">
      <h1><%= team.isNewRecord ? 'Nuevo equipo' : 'Editar equipo' %></h1>

      <%- include('../_error/snippet', { errors: locals.errors }) %>

      <div>
        <form action="<%= submitTeamPath %>" method="post" enctype="multipart/form-data">
          <% if(!team.isNewRecord) { %>
            <div>
              <input type="hidden" name="_method" value="patch" />
            </div>
          <% } %>
          <div>
            <label for="name">Nombre</label>
            <input type="text" name="name" value="<%= team.name %>" required/>
          </div>
          <div>
            <label for="logo">Logo</label>
            <input type="file" accept="image/*" name="logo" ></input>
          </div>
          <div>
            <label for="sportId">Deporte</label>

            <% sports.forEach((sport) => { %>
              <input type="radio" name="sportId" value="<%= sport.id %>" required
              <%= (sport.id === team.sportId) ? 'checked' : '' %> >
              <%= sport.name %>
            <% }) %>
          </div>
          <div>
            <% if(team.isNewRecord) { %>
              <input type="submit" name="create" value="Crear" />
            <% } else { %>
              <input type="submit" name="update" value="Guardar" />
            <% } %>
          </div>
        </form>
      </div>

      <%- include('../_buttons/cancel', { cancelPath }) %>
    </div>
  </div>
</div>
