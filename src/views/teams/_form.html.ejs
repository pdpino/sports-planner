<h1><%= team.isNewRecord ? 'Nuevo equipo' : 'Editar equipo' %></h1>
<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas arreglar los siguiente errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitTeamPath %>" method="post">
    <% if(!team.isNewRecord) { %>
      <div>
        <input type="hidden" name="_method" value="patch" />
      </div>
    <% } %>
    <div>
      <label for="name">Nombre</label>
      <input type="text" name="name" value="<%= team.name %>" />
    </div>
    <div>
      <label for="logo">Logo</label> <!-- TODO: subir imagen -->
      <input type="text" name="logo" value="<%= team.logo %>"></input>
    </div>
    <div> <!-- TODO: agregar editar deporte, cuando relación esté lista -->
      <label for="sport">Deporte</label>
      <input type="text" name="sport" value="<%= //team.sport %>"></input>
    </div>
    <div>
      <% if(team.isNewRecord) { %>
        <input type="submit" name="create" value="Crear" />
      <% } else { %>
        <input type="submit" name="update" value="Guardar" />
      <% } %>
    </div>
  </form>
</div>
