<%# Must exist: teams, submitPath

  Optional: buttonMessage, noTeamMessage %>

<% if (teams.length > 0) { %>
  <form action="<%= submitPath %>" method="post">
    <div>
      <label for="teamId">Elegir equipo</label>
      <% teams.forEach((team) => { %>
        <div>
          <input type="radio" name="teamId" value="<%= team.id %>"/> <%= team.name %>
        </div>
      <% }) %>
    </div>

    <div>
      <input type="submit" name="create" value="<%= locals.buttonMessage || 'AÃ±adir' %>" />
    </div>

  </form>
<% } else { %>
  <p>
    <%= locals.noTeamMessage || 'No hay equipos' %>
  </p>
<% } %>
