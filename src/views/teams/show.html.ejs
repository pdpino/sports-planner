<h1><%= team.name %></h1>
<p>
  Logo: <%= team.logo %>
  <br>
  Deporte: <%= sport %>
</p>

<form action=<%= editTeamPath %>>
    <input type="submit" value="Editar"/>
</form>

<form action="<%= deleteTeamPath %>" method="post">
  <div>
    <input type="hidden" name="_method" value="delete" />
  </div>
  <div>
    <input type="submit" name="delete" value="Eliminar" />
  </div>
</form>

<br />

<form action=<%= teamsPath %>>
    <input type="submit" value="Volver a todos los equipos"/>
</form>
