<div id="body-container">
  <div class="jumbotron">
    <div id="team-column-left" class="column-30">

      <div id="team-card" class="box-container">
        <img class="medium-logo" src="<%= team.getLogo() %>" alt="logo">
        <h2><%= team.name %></h2>
        <p> <%= team.sport.name %> </p>

        <% if (hasModifyPermission) { %>
          <%- include('../_buttons/edit', { editPath: editTeamPath }) %>
          <%- include('../_buttons/delete', { deletePath: deleteTeamPath }) %>
        <% } %>
      </div>

    </div>

    <div id="team-column-center" class="column-40">
      <div id="team-players" class="box-container">
        <h4>Jugadores</h4>
        <%- include('../players/_index', {
          players: teamMembers,
          isTeamMember: true,
          editParticipationPath: editTeamMemberPath,
          editParticipationMessage: 'Editar miembro de equipo'
        }) %>

        <% if (hasModifyPermission) { %>
          <form action="<%= newTeamMemberPath %>">
            <input type="submit" value="Añadir Jugador" />
          </form>
        <% } %>

      </div>

      <div id="team-matches" class="box-container">
        <h4>Partidos</h4>
        <%- include('../matches/_index', {
          matches: teamMatches,
          isPlayerMatch: false,
          isTeamMatch: true,
          editInvitationPath: editTeamMatchPath
        }) %>

        <% if (hasModifyPermission) { %>
          <form action="<%= newTeamMatchPath %>">
            <input type="submit" value="Añadir partidos" />
          </form>
        <% } %>

      </div>

    </div>

    <div id="team-column-right" class="column-30">
      <div id="team-comments-react-app"
        class="box-container"
        data-team-id="<%= team.id %>"
        data-can-public-comment="<%= canComment %>"
        data-can-see-private-comments="<%= canSeePrivateComments %>"
        >
      </div>


    </div>


  </div>
</div>
