<div id="body-container">
  <div class="jumbotron-center">
    <div class="box-container index-container">
      <h1>Equipos</h1>

      <% if (hasCreatePermission) { %>
        <form action="<%= newTeamPath %>">
          <input type="submit" value="Crear Equipo"/>
        </form>
      <% } %>

      <% if (teams.length > 0) { %>
        <ul>
          <% teams.forEach((team) => { %>
            <li>
              <a class="lilink" href="<%= getTeamPath(team) %>"%>>
                <img class="medium-logo" src="<%= team.getLogo() %>"/>
                <div>
                  <%= team.name %>
                </div>
                <div class="index-sport-name">
                  <%= team.sport.name %>
                </div>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p> No hay equipos </p>
      <% } %>


    </div>
  </div>
</div>
