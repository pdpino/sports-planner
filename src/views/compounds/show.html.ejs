<div id="body-container">
  <div class="jumbotron">

    <div id="compound-column-left" class="column-40">

      <div id="compound-card" class="box-container">
        <img class="medium-logo" src="<%= compound.getPhoto() %>" height="500" width="500">
        <h3><%= compound.name %></h3>
        <p> <%= compound.localEmail %> </p>

        <p> Teléfono: <%= compound.localPhone %> </p>
        <p> Dirección: <%= compound.address %> </p>
        <p>
          Dueño:
          <a href="<%= getCompoundOwnerPath(compoundOwner) %>"><%= compoundOwner.getName() %></a>
        </p>

        <% if(hasModifyPermission) { %>
          <%- include('../_buttons/edit', {
            editPath: editCompoundPath,
            message: 'Editar información del recinto',
          }) %>
        <% } %>

      </div>

      <div id="compound-reviews" class="box-container">
        <%- include('../compoundReviews/index') %>
      </div>

    </div>

    <div id="compound-column-right" class="column-60">
      <div id="compound-fields" class="box-container">
        <h4> Canchas que dispone </h4>
        <% if(fields.length > 0) { %>
          <%- include('../fields/index-snippet', { fields, logoClassName: "medium-logo" }) %>
        <% } else { %>
          No contiene canchas
        <% } %>

        <% if(hasModifyPermission) { %>
          <form action="<%= newFieldPath %>">
            <input type="submit" value="Crear Cancha" />
          </form>
        <% } %>
      </div>
    </div>

  </div>
</div>
