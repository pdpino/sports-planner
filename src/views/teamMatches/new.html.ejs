<div id="body-container">
  <div class="jumbotron-center">
    <div class="box-container new-invitation-container">
      <h1>Buscar partidos para unirse</h1>

      <% if (joinableMatches.length > 0) { %>
        <form action="<%= submitTeamMatchPath %>" method="post">
          <div>
            <label for="playerId">Elegir un partido</label>
            <% joinableMatches.forEach( (match) => { %>
              <div>
                <input type="radio" name="matchId" value="<%= match.id %>"/> <%= match.name %>
              </div>
            <% }) %>
          </div>

          <div>
            <input type="submit" name="create" value="Solicitar unirse" />
          </div>

        </form>
      <% } else { %>
        <div>
          <strong>
            No hay partidos para unirse
          </strong>
        </div>
      <% } %>

      <%- include('../_buttons/cancel', { cancelPath }) %>
    </div>
  </div>
</div>
