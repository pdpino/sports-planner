<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Jugamos? - IIC2513</title>


    <link rel="stylesheet" href="/assets/styles/layout.css">

    <% if (env !== 'development') { %>
       <link rel="stylesheet" href="/assets/styles.css">
     <% } %>

  </head>

  <body>
    <header>
      <div id="logo">
        <a href="<%= homePath %>">
          <img src="/assets/logo.png" alt="Logo" />
        </a>
      </div>


    <div id="user-bar">
      <% if (currentUser) { %>
        <div class=bar>
        <img src=<%=currentUser.photo %> height="56px"/>
      </div>
        <span class="username" class="name"> Hola <%= currentUser.firstName %></span>

        <% if (!hasAdminPermission) { %>
          <form  class="bar" action="<%= profilePath %>" method="get">
            <input type="submit" value="Mi Perfil" />
          </form>
        <% } %>

        <form class="bar" action="<%= destroySessionPath %>" method="post">
          <input type="hidden" name="_method" value="delete" />
          <input type="submit" value="Salir" />
        </form>

      <% } else { %>
        <span class="username" class="name">Hola Invitado</span>

        <form class="bar" action="<%= newSessionPath %>" method="get">
          <input type="submit" value="Iniciar sesión" />
        </form>
        <form class="bar" action="<%= signUpPlayerPath %>" method="get">
          <input type="submit" value="Regístrate como jugador" />
        </form>
        <form class="bar" action="<%= signUpOwnerPath %>" method="get">
          <input type="submit" value="Regístrate como dueño de recintos deportivos" />
        </form>

      <% } %>
    </div>
    </header>
    <%- body %>
    <script src="/assets/app.js"></script>
  </body>

</html>
