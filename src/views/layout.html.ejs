<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Jugamos? - IIC2513</title>
    <% if (env !== 'development') { %>
       <link rel="stylesheet" href="/assets/styles.css">
     <% } %>
  </head>

  <body>
    <header>
      <div id="nav-bar">
        <div id="logo">
          <a href="<%= homePath %>">
            <img src="/assets/logo.png" alt="Logo" />
          </a>
        </div>

        <div id="buttons-bar">
          <a class="nav-bar-button" href="<%= playersPath %>"> Jugadores </a>
          <a class="nav-bar-button" href="<%= teamsPath %>"> Equipos </a>
          <a class="nav-bar-button" href="<%= matchesPath %>"> Partidos </a>
          <a class="nav-bar-button" href="<%= compoundsPath %>"> Recintos </a>
          <a class="nav-bar-button" href="<%= indexPath %>"> Ver más </a>
        </div>

        <div id="user-bar">
          <% if (currentUser) { %>

            <a id="profile-button" href="<%= profilePath %>">
              <div id="profile-picture">
                <img class="small-logo" src="<%= currentUser.getPhoto() %>"/>
              </div>
              <span id="profile-name">
                Hola <%= currentUser.firstName %>
              </span>
            </a>

            <form id="logout-button" class="nav-bar-button" action="<%= destroySessionPath %>" method="post">
              <input type="hidden" name="_method" value="delete"/>
              <input id="logout-button-input" type="submit" name="delete" value="Salir" />
            </form>

          <% } else { %>
            <span id="invited-name">
              Hola Invitado
            </span>

            <a id="login-button" class="nav-bar-button" href="<%= newSessionPath %>"> Iniciar sesión </a>

            <div class="register-dropdown">
              <button class="nav-bar-button">Registrarse</button>
              <div class="register-options">
                <a href="<%= signUpPlayerPath %>">
                  Jugador
                </a>
                <a href="<%= signUpOwnerPath %>">
                  Dueño de recinto
                </a>
              </div>
            </div>
          <% } %>
        </div>
      </div>

    </header>
    <%- body %>
    <script src="/assets/app.js"></script>
    <script src="/assets/appReact.js"></script>
  </body>

</html>
