<div class ="center">
  <h1> Editar solicitudes de partido %></h1>

  <%- include('../error-snippet', { errors: locals.errors }) %>

  <div>
    <%= match.name %> - <%= match.date %>

    <%- include('../_invitations/form', {
      invitation: match.isPlayerInvited,
      chooseStatuses,
      submitPath: submitPlayerMatchPath,
      hasAdminPermission: match.isPlayerInvited.isAdmin,
    }) %>

  </div>

  <form action="<%= deletePlayerMatchPath %>" method="post">
    <div>
      <input type="hidden" name="_method" value="delete" />
    </div>
    <div>
      <input type="submit" name="delete" value="Eliminar" />
    </div>
  </form>

  <form action="<%= cancelPath %>">
    <input class"deletebutton" type="submit" value="Cancelar"/>
  </form>
</div>
