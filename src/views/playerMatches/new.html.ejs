<div id="body-container">
  <div class="jumbotron-center">
    <div class="box-container new-invitation-container">

      <h1>Agregar Partidos</h1>

      <% if(invitableMatches.length > 0) { %>
        <form action="<%= submitPlayerMatchPath %>" method="post">
          <div>
            <label for="matchId">Elegir partido</label>
            <% invitableMatches.forEach( (match) => { %>
              <div>
                <input type="radio" name="matchId" value="<%= match.id %>"/> <%= match.name %> - <%= match.date %>
              </div>
            <% }) %>
          </div>


          <div>
            <input type="submit" name="create" value="AÃ±adir" />
          </div>

        </form>
      <% } else { %>
        <div>
          <strong>
            No quedan partidos para agregar!
          </strong>
        </div>
      <% } %>

      <%- include('../_buttons/cancel') %>
    </div>
  </div>
</div>
