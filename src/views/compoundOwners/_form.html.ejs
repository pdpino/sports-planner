<h1> <%= (compoundOwner.isNewRecord) ? 'Nuevo Dueño de recinto' : 'Editar Dueño de recinto' %></h1>
<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas arreglar los siguiente errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitcompoundOwnerPath %>" method="post">
    <% if(!compoundOwner.isNewRecord) { %>
      <div>
        <input type="hidden" name="_method" value="patch" />
      </div>
    <% } %>
    <div>
      <label for="email">E-Mail</label>
      <input type="text" name="email" value="<%= compoundOwner.email %>" />
    </div>
    <div>
      <label for="password">password</label>
      <input type="password" name="password" value="<%= compoundOwner.password %>" />
    </div>
    <div>
      <label for="firstName">Nombre</label>
      <input type="text" name="firstName" value="<%= compoundOwner.firstName %>" />
    </div>
    <div>
      <label for="lastName">Apellido</label>
      <input type="text" name="lastName" value="<%= compoundOwner.lastName %>" />
    </div>
    <div>
      <label for="phone">Teléfono</label>
      <input type="text" name="phone" value="<%= compoundOwner.phone %>" />
    </div>
      <% if(compoundOwner.isNewRecord) { %>
        <input type="submit" name="create" value="Registrarse" />
      <% } else { %>
        <input type="submit" name="update" value="Guardar Cambios" />
      <% } %>
    </div>
  </form>
</div>


<% if(!compoundOwner.isNewRecord) { %>
  <form action="<%= deletecompoundOwnerPath %>" method="post">
    <div>
      <input type="hidden" name="_method" value="delete" />
    </div>
    <div>
      <input type="submit" name="delete" value="Eliminar Usuario" />
    </div>
  </form>
<% } %>

<form action="<%= cancelPath %>" method="get">
    <input type="submit" value="Cancelar"/>
</form>
