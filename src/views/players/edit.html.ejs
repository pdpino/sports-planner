<h1>Nuevo Jugador</h1>
<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas arreglar los siguiente errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= updatePlayerPath%>" method="post">
    <div>
      <label for="title">E-Mail</label>
      <input type="text" name="email" value="<%= player.email %>" />
    </div>
    <div>
      <label for="password">password</label>
      <input type="text" name="password" value="<%= player.password %>" />
    </div>
    <div>
      <label for="Name">Nombre</label>
      <input type="text" name="name" value="<%= player.name %>" />
    </div>
    <div>
      <label for="bday">Cumpleaños</label>
      <input type="date" name="age" value="<%= player.age %>" />
    </div>
    <div>
      <label for="photo">Photo</label>
      <input type="text" name="photo" value="<%= player.photo %>" />
    </div>
    <div>
      <label for="gender">Género</label>
      <input type="text" name="gender" value="<%= player.gender %>" />
    </div>
    <div>
      <input type="submit" name="create" value="Guardar Cambios" />
    </div>



  </form>
</div>



<form action="<%= deletePlayerPath %>" method="post">
  <div>
    <input type="hidden" name="_method" value="delete" />
  </div>
  <div>
    <input type="submit" name="delete" value="Eliminar" />
  </div>
</form>

<form action=<%= cancelPlayerPath %>>
    <input type="submit" value="Cancelar"/>
</form>

<form action="<%= PlayeraddTeamPath %>" method="post">
  <div>
    <select name="selectedteamid">
      <% teams.forEach((team) => { %>
      <option name="teamid" value="<%= team.id %>"><%= team.name %></option>
        <% }) %>
    </select>
    <input type="submit" name="add" value="Agregar Equipo" />
  </div>
</form>
