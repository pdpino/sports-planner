<h1><%= player.isNewRecord ? 'Nuevo Jugador' : 'Editar Jugador' %></h1>
<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Necesitas arreglar los siguiente errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitPlayerPath %>" method="post">
    <% if(!player.isNewRecord) { %>
      <div>
        <input type="hidden" name="_method" value="patch" />
      </div>
    <% } %>
      <div>
        <label for="title">E-Mail</label>
        <input type="text" name="email" value="<%= player.email %>" />
      </div>
      <div>
        <label for="password">password</label>
        <input type="text" name="password" value="<%= player.password %>" />
      </div>
      <div>
        <label for="Name">Nombre</label>
        <input type="text" name="name" value="<%= player.name %>" />
      </div>
      <div>
        <label for="bday">Cumpleaños</label>
        <input type="date" name="age" value="<%= player.age %>" />
      </div>
      <div>
        <label for="photo">Photo</label>
        <input type="text" name="photo" value="<%= player.photo %>" />
      </div>
      <div>
        <label for="gender">Género</label>
        <input type="text" name="gender" value="<%= player.gender %>" />
      </div>
      <div>
      <% if(player.isNewRecord) { %>
        <input type="submit" name="create" value="Crear" />
      <% } else { %>
        <input type="submit" name="update" value="Guardar" />
      <% } %>
    </div>
  </form>
</div>
