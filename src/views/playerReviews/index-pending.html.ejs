<%# Provide: pendingReviews,
  Optional: noReviewsMessage
  %>

<div>
  <% if(pendingReviews.length > 0) { %>
    <ul>
      <% pendingReviews.forEach((review) => { %>
        <li>
          <%= review.reviewed.getName() %>

          <%- include('../_reviews/new', { createReviewPath: createPlayerReviewPath(review.reviewed) }) %>

        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p><%= locals.noReviewsMessage || 'No hay reviews pendientes' %></p>
  <% } %>

</div>
