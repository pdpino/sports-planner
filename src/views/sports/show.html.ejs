<div class="center">
  <h1><%= sport.name %></h1>
  <img class="medium-logo" src="<%= sport.logo %>" alt="logo">
  <p>Es un deporte <%= (sport.isIndividual) ? 'individual' : 'colectivo' %>.</p>

  <% if (hasModifyPermission) { %>
    <%- include('../_buttons/edit', { editPath: editSportPath }) %>

    <%- include('../_buttons/delete', { deletePath: deleteSportPath }) %>

  <% } %>

  <%- include('../_buttons/back', { backPath: sportsPath, message: 'Volver a todos los deportes' }) %>

</div>
