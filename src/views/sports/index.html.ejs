<div class="center">
  <h1>Deportes</h1>

  <% if (hasModifyPermission) { %>
    <form action="<%= newSportPath %>">
        <input type="submit" value="Crear deporte"/>
    </form>
  <% } %>

  <% if (sports.length > 0) { %>
    <ul>
      <% sports.forEach((sport) => { %>
        <li>
            <a class="lilink sport" href="<%= sportPath(sport) %>"%>>
            <img class="medium-logo" src="<%= sport.logo %>" alt="logo"/>
            <div>
             <%= sport.name %>
           </div>
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p> No hay deportes para mostrar </p>
  <% } %>
</div>
