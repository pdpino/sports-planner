<div id="body-container">
  <div class="jumbotron-center">
    <div class="box-container index-container">
      <h1>Partidos</h1>

      <% if (hasCreatePermission) { %>
        <form action="<%= newMatchPath %>">
          <input type="submit" value="Crear partido"/>
        </form>
      <% } %>

      <ul>
        <% if (matches.length > 0) { %>
          <% matches.forEach((match) => { %>
            <li>
              <a class="lilink" href="<%= getMatchPath(match) %>"%>>
                <div>
                  <%= match.name %>
                </div>
                <% if (match.date) { %>
                  <p>
                    Fecha: <%= prettyTimestamp(match.date) %>
                  </p>
                <% } %>
              </a>
            </li>
          <% }) %>
        <% } else { %>
          <p>
            No hay partidos disponibles
          </p>
        <% } %>
      </ul>
    </div>
  </div>
</div>
