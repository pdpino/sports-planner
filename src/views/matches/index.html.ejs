<div class="center">
  <h1>Partidos</h1>

  <% if (hasCreatePermission) { %>
  <form action="<%= newMatchPath %>">
      <input type="submit" value="Crear partido"/>
  </form>
  <% } %>

  <ul>
    <% if (matches.length > 0) { %>
      <% matches.forEach((match) => { %>
        <li>
          <a href="<%= matchPath(match) %>">
            <%= match.name %>
          </a>
          <p>
            Fecha: <%= match.date %>
          </p>
        </li>
      <% }) %>
    <% } else { %>
      <p>
        No hay partidos disponibles
      </p>
    <% } %>
  </ul>
</div>
